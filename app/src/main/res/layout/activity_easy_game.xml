<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyGameActivity">

    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/theGreat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:text="THE GREAT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rgb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/theGreat">

            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_weight="0.9"
                android:text="RGB (" />

            <TextView
                android:id="@+id/colorRedText"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />
            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="," />

            <TextView
                android:id="@+id/colorGreenText"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />
            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="," />

            <TextView
                android:id="@+id/colorBlueText"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />

            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guessingGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rgb">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:fontFamily="@font/shablagooital"
                android:text="Guessing Game" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guessingGame">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/shablagooital"
                android:text="PICK THE RIGHT COLOR AS THE RGB ABOVE" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/select"
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/firstCardView">

                <RelativeLayout
                    android:id="@+id/firstRelativeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/firstImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/firstTextView"
                        android:layout_alignStart="@+id/firstTextView"
                        android:layout_alignLeft="@+id/firstTextView"
                        android:layout_alignEnd="@+id/firstTextView"
                        android:layout_alignRight="@+id/firstTextView"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/firstTextView"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/secondCardView">

                <RelativeLayout
                    android:id="@+id/secondRelativeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/secondImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/secondTextView"
                        android:layout_alignStart="@+id/secondTextView"
                        android:layout_alignLeft="@+id/secondTextView"
                        android:layout_alignEnd="@+id/secondTextView"
                        android:layout_alignRight="@+id/secondTextView"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/secondTextView"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstRow"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/thirdCardView">

                <RelativeLayout
                    android:id="@+id/thirdRelativeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/thirdImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/thirdTextView"
                        android:layout_alignStart="@+id/thirdTextView"
                        android:layout_alignLeft="@+id/thirdTextView"
                        android:layout_alignEnd="@+id/thirdTextView"
                        android:layout_alignRight="@+id/thirdTextView"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/thirdTextView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="30dp"

                android:backgroundTint="@color/ash"
                android:id="@+id/fourthCardView">

                <RelativeLayout
                    android:id="@+id/fourthRelativeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/fourthImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/fourthTextView"
                        android:layout_alignStart="@+id/fourthTextView"
                        android:layout_alignLeft="@+id/fourthTextView"
                        android:layout_alignEnd="@+id/fourthTextView"
                        android:layout_alignRight="@+id/fourthTextView"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/fourthTextView"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondRow"
            android:id="@id/thirdRow"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:textColor="@color/whiteText"
                android:layout_weight="1"
                android:padding="5dp"
                android:id="@+id/easyPlayerOneScore"
                android:text="0"
                android:background="@drawable/blue_round_background" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/shablagooital"
                android:textColor="#1DA1F2"
                android:layout_weight="1"
                android:text="Player 1" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:textColor="#E0245E"
                android:text="Player 2" />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:padding="5dp"
                android:textColor="@color/whiteText"
                android:layout_weight="1"
                android:id="@+id/easyPlayerTwoScore"
                android:text="0"
                android:background="@drawable/red_round_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdRow"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/easyReset"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginRight="5dp"
                android:text="Reset"></Button>

            <Button
                android:id="@+id/easyRestart"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginRight="5dp"
                android:text="start"></Button>
            <Button
                android:id="@+id/easySelectLevel"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginLeft="5dp"
                android:text="select level"></Button>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>