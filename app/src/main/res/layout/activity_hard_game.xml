<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HardGameActivity">

    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/theGreat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:text="THE GREAT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rgb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/theGreat">

            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_weight="0.9"
                android:text="RGB (" />

            <TextView
                android:id="@+id/colorRedTextHard"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />
            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="," />

            <TextView
                android:id="@+id/colorGreenTextHard"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />
            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="," />

            <TextView
                android:id="@+id/colorBlueTextHard"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="111" />

            <TextView
                android:textSize="30sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guessingGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rgb">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:fontFamily="@font/shablagooital"
                android:text="Guessing Game" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guessingGame">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/shablagooital"
                android:text="PICK THE RIGHT COLOR AS THE RGB ABOVE" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/select"
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/firstCardViewHard">

                <RelativeLayout
                    android:id="@+id/firstRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/firstImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/firstTextViewHard"
                        android:layout_alignStart="@+id/firstTextViewHard"
                        android:layout_alignLeft="@+id/firstTextViewHard"
                        android:layout_alignEnd="@+id/firstTextViewHard"
                        android:layout_alignRight="@+id/firstTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/firstTextViewHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/secondCardViewHard">

                <RelativeLayout
                    android:id="@+id/secondRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/secondImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/secondTextViewHard"
                        android:layout_alignStart="@+id/secondTextViewHard"
                        android:layout_alignLeft="@+id/secondTextViewHard"
                        android:layout_alignEnd="@+id/secondTextViewHard"
                        android:layout_alignRight="@+id/secondTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/secondTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/thirdCardViewHard">

                <RelativeLayout
                    android:id="@+id/thirdRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/thirdImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/thirdTextViewHard"
                        android:layout_alignStart="@+id/thirdTextViewHard"
                        android:layout_alignLeft="@+id/thirdTextViewHard"
                        android:layout_alignEnd="@+id/thirdTextViewHard"
                        android:layout_alignRight="@+id/thirdTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/thirdTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstRow"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/fourthCardViewHard">

                <RelativeLayout
                    android:id="@+id/fourthRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/fourthImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/fourthTextViewHard"
                        android:layout_alignStart="@+id/fourthTextViewHard"
                        android:layout_alignLeft="@+id/fourthTextViewHard"
                        android:layout_alignEnd="@+id/fourthTextViewHard"
                        android:layout_alignRight="@+id/fourthTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/fourthTextViewHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/fifthCardViewHard">

                <RelativeLayout
                    android:id="@+id/fifthRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/fifthImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/fifthTextViewHard"
                        android:layout_alignStart="@+id/fifthTextViewHard"
                        android:layout_alignLeft="@+id/fifthTextViewHard"
                        android:layout_alignEnd="@+id/fifthTextViewHard"
                        android:layout_alignRight="@+id/fifthTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/fifthTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/sixthCardViewHard">

                <RelativeLayout
                    android:id="@+id/sixthRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/sixthImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/sixthTextViewHard"
                        android:layout_alignStart="@+id/sixthTextViewHard"
                        android:layout_alignLeft="@+id/sixthTextViewHard"
                        android:layout_alignEnd="@+id/sixthTextViewHard"
                        android:layout_alignRight="@+id/sixthTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/sixthTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondRow"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/seventhCardViewHard">

                <RelativeLayout
                    android:id="@+id/seventhRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/seventhImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/seventhTextViewHard"
                        android:layout_alignStart="@+id/seventhTextViewHard"
                        android:layout_alignLeft="@+id/seventhTextViewHard"
                        android:layout_alignEnd="@+id/seventhTextViewHard"
                        android:layout_alignRight="@+id/seventhTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/seventhTextViewHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/eighthCardViewHard">

                <RelativeLayout
                    android:id="@+id/eighthRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/eighthImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/eighthTextViewHard"
                        android:layout_alignStart="@+id/eighthTextViewHard"
                        android:layout_alignLeft="@+id/eighthTextViewHard"
                        android:layout_alignEnd="@+id/eighthTextViewHard"
                        android:layout_alignRight="@+id/eighthTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/eighthTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/ninthCardViewHard">

                <RelativeLayout
                    android:id="@+id/ninthRelativeViewHard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ninthImageHard"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/ninthTextViewHard"
                        android:layout_alignStart="@+id/ninthTextViewHard"
                        android:layout_alignLeft="@+id/ninthTextViewHard"
                        android:layout_alignEnd="@+id/ninthTextViewHard"
                        android:layout_alignRight="@+id/ninthTextViewHard"
                        android:layout_marginStart="19dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/ninthTextViewHard"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdRow"
            android:id="@+id/fourthRow"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:textColor="@color/whiteText"
                android:layout_weight="1"
                android:padding="5dp"
                android:id="@+id/hardPlayerOneScore"
                android:text="0"
                android:background="@drawable/blue_round_background" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/shablagooital"
                android:textColor="#1DA1F2"
                android:layout_weight="1"
                android:text="Player 1" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/shablagooital"
                android:layout_weight="1"
                android:textColor="#E0245E"
                android:text="Player 2" />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/shablagooital"
                android:padding="5dp"
                android:textColor="@color/whiteText"
                android:layout_weight="1"
                android:id="@+id/hardPlayerTwoScore"
                android:text="0"
                android:background="@drawable/red_round_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthRow"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/hardReset"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginRight="5dp"
                android:text="reset"></Button>
            <Button
                android:id="@+id/hardRestart"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginRight="5dp"
                android:text="start"></Button>
            <Button
                android:id="@+id/hardSelectLevel"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:fontFamily="@font/shablagooital"
                android:background="@drawable/round_button_layout"
                android:layout_marginLeft="5dp"
                android:text="select level"></Button>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>